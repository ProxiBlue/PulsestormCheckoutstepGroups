<config>
    <sections>
        <checkout>
            <groups>
                <pulsestorm_checkoutstep module="pulsestorm_checkoutstep">
                    <label>Extra Checkout Step</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <groups>
                            <label>Not For Group</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>adminhtml/system_config_source_customer_group_multiselect</source_model>
                            <sort_order>800</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                            <comment>Do not show this step if the customer is in any of the selected groups</comment>
                        </groups>
                    </fields>
                </pulsestorm_checkoutstep>
            </groups>
        </checkout>
    </sections>
</config>